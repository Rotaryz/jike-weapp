@import "./variable.styl"
@import "./mixin.styl"

.swiper-container .dots
  position: absolute
  left: 0
  right: 12px
  bottom: 10px
  display: flex
  justify-content: center

.swiper-container .dots .dot
  width: 5px
  height: 5px
  margin: 0 2.5px
  border-radius: 50%
  transition: all .6s

.swiper-container .dots .dot.active
  width: 12.5px

.full-image
  width: 100%
  height: 100%

.line-title
  position: relative
  text-align: center
  font-size: $font-size-large

// 宠物
.pet
  color: $color-pet-theme !important
  border: 0.5px solid $color-pet-theme !important

.pet-bg
  background: $color-pet-theme !important
  opacity: 1

.pet-text
  color: $color-pet-theme !important

.pet-border
  border-bottom: 2px solid $color-pet-theme !important

.pet-coupon
  width: 3.35px
  height: 100%
  position: absolute
  left: 0
  top: 0px
  background: $color-pet-theme
  border-radius: 2px 0 0 2px

.line-pet
  position: relative
  &:before
    position: absolute
    left: 0
    top: 0
    width: 2px
    height: 14px
    content: ''
    background: $color-pet-theme

