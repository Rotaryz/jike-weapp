  @import '../../common/stylus/variable'
  @import '../../common/stylus/mixin'
  .share-list
    height: 100vh

  .ro-share-none
    position: fixed
    top: 45.3vw
    row-center()
    .ro-share-none-img
      width: 86px
      height: 71px
    .ro-share-none-text
      font-size: $font-size-small
      margin-top: 10px
